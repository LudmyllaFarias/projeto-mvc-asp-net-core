@model Contato
@{
    ViewData["Title"] = "Confirmação de apagar o contato";
}

<div class="text-center mb-4">
    <h3>Realmente desejar apagar o contato (@Model.Nome)? </h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Contato" asp-action="Index">Cancelar</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Apagar</a>
