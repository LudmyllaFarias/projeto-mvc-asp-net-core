@model List<Contato>
@{
    ViewData["Title"] = "Listagem de contatos";
}
<div class="d-grid gap-2 d-md-flex justify-content-md-start align-items-md-start">
    <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Criar">Adicionar novo contato</a>
</div>

<div class="text-center">

    <br/>
    <h3 class="display-4 mb-4">Listagem de contatos</h3>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nome</th>
          <th scope="col">Email</th>
          <th scope="col">Celular</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (Contato contato in Model)
                {
                      <tr>
                          <th scope="row">@contato.Id</th>
                          <td>@contato.Nome</td>
                          <td>@contato.Email</td>
                          <td>@contato.Celular</td>
                          <td>
                            <div class="btn-group" role="group">
                              <a role="button" class="btn btn-info" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                          </td>
                      </tr> 
                }
            }
        </tbody>
    </table>
</div>