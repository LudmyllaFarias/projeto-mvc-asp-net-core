@model Usuario

@{
    ViewData["Title"] = "Criar usuário";
}

<div class="text-center">

    <h3 class="display-4 mb-4">Cadastrar usuário</h3>

</div>

<form class="row g-3" asp-controller="Usuario" asp-action="Criar" method="post">

    <div class="col-md-6">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do usuário">
        <span style="color: red;">@Html.ValidationMessageFor( c => c.Nome)</span>
    </div>

    <div class="col-md-6">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite o login do usuário">
        <span style="color: red;">@Html.ValidationMessageFor( c => c.Login)</span>
    </div>

     <div class="col-md-6">
       <label for="email" class="form-label">E-mail</label>
       <input type="email" asp-for="Email" class="form-control" placeholder="Digite o e-mail do usuário">
        <span style="color: red;">@Html.ValidationMessageFor( c => c.Email)</span>
    </div>

    <div class="col-md-6">
        <label for="senha" class="form-label">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" placeholder="Digite a senha do usuário">
        <span style="color: red;">@Html.ValidationMessageFor( c => c.Senha)</span>
    </div>


  <div class="col-12 mt-4">
    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
</div>
</form>
