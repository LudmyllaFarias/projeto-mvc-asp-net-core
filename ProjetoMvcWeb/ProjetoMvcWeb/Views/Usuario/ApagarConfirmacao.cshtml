@model Usuario
@{
    ViewData["Title"] = "Confirmação de apagar o usuário";
}

<div class="text-center mb-4">
    <h3>Realmente deseja apagar o usuário (@Model.Nome)? </h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Usuario" asp-action="Index">Cancelar</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Usuario" asp-action="Apagar" asp-route-id="@Model.Id">Apagar</a>
